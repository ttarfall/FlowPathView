<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.example.my.flowpath.RoundNumberView
        xmlns:rvn="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rnv_number"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        rvn:lineTopWidth="1dp"
        rvn:lineTopHeight="30dp"
        rvn:lineBottomWidth="1dp"
        rvn:lineBottomHeight="30dp"
        rvn:roundRadius="10dp"
        rvn:padding="4dp"
        rvn:image="@mipmap/icon_success" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#777777"
        android:text="成功提交"/>

</LinearLayout>